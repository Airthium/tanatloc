{
  "readmesh3": {
    "prefix": "readmesh3",
    "body": ["readmesh3(\"${1:file}\"${2:, verbose=0})"],
    "description": "Read a mesh in FreeFEM format."
  },
  "load": {
    "prefix": "load",
    "body": ["load(\"${1:file}\")"],
    "description": "Load a mesh in FreeFEM format."
  },
  "if": {
    "prefix": "if",
    "body": ["if (${1:condition}) {", "\t${2:// code}", "}"],
    "description": "Conditionally execute code."
  },
  "for": {
    "prefix": "for",
    "body": [
      "for (${1:i} = ${2:0}; $1 < ${3:count}; $1${4:++}) {",
      "\t${5:// code}",
      "}"
    ],
    "description": "Iterate over a range of numbers."
  },
  "while": {
    "prefix": "while",
    "body": ["while (${1:condition}) {", "\t${2:// code}", "}"],
    "description": "Execute code while a condition is true."
  },
  "function": {
    "prefix": "function",
    "body": ["void ${1:functionName}(${2:arguments}) {", "\t${3:// code}", "}"],
    "description": "Create a new function."
  }
}
