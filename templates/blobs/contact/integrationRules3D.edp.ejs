        // Gauss quadrature IP
        ipn = 7; // integration point number by a segment
        tip1 = [1./3., (6.-15^0.5)/21., (6.-15^0.5)/21., (9.+2*15^0.5)/21., (6.+15^0.5)/21., (6.+15^0.5)/21., (9.-2*15^0.5)/21.];			                // first component of the integration point (eta1)
