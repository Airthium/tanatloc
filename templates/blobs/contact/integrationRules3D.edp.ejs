        wip = 1/2.*[0.225, (155.-15^0.5)/1200., (155.-15^0.5)/1200., (155.-15^0.5)/1200., (155.+15^0.5)/1200., (155.+15^0.5)/1200., (155.+15^0.5)/1200.];   // weight integration rule
    }
    return 0;
}
